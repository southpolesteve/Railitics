<h1>
  <%= link_to "Railitics", root_path %>
</h1>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Method</th>
      <th>Controller</th>
      <th>Action</th>
      <th>User ID or Request UUID</th>
      <th>Referral URL</th>
      <th>Time</th>
    </tr>
  </thead>
  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.method %></td>
        <td><%= request.controller %></td>
        <td><%= request.action %></td>
        <td><%= request.user_id ? link_to(request.user_id, root_path(user_id: request.user_id)) : link_to(request.uuid, root_path(uuid: request.uuid)) %></td>
        <td><%= request.referrer %></td>
        <td><%= request.created_at.to_s %></td>
      </tr>
    <% end %>
  </tbody>
</table>

